<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/activity_app_view_trusted_information_overlay_tr_third_party"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/ic_badge_market" />

            <TextView
                android:id="@+id/activity_app_view_trusted_information_overlay_tv_reason_thirdparty_validated"
                style="@style/badgeReasonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reason_third_party" />
        </TableRow>

        <TableRow
            android:id="@+id/activity_app_view_trusted_information_overlay_tr_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/activity_app_view_trusted_information_overlay_iv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/ic_badge_signature" />

            <TextView
                android:id="@+id/activity_app_view_trusted_information_overlay_tv_reason_signature_validation"
                style="@style/badgeReasonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>


        <TableRow
            android:id="@+id/activity_app_view_trusted_information_overlay_tr_scanned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/ic_badge_antivirus" />

            <TextView
                android:id="@+id/activity_app_view_trusted_information_overlay_tv_reason_scanned_passed"
                style="@style/badgeReasonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reason_scanned" />
        </TableRow>


        <TableRow
            android:id="@+id/activity_app_view_trusted_information_overlay_tr_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/ic_badge_flag" />

            <TextView
                android:id="@+id/activity_app_view_trusted_information_overlay_tv_reason_manual_qa"
                style="@style/badgeReasonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reason_manual" />
        </TableRow>



        <TableRow
            android:id="@+id/activity_app_view_trusted_information_overlay_tr_unknown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/activity_app_view_trusted_information_overlay_tv_reason_unknown"
                style="@style/badgeReasonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reason_unknown" />
        </TableRow>
    </TableLayout>

</LinearLayout>

