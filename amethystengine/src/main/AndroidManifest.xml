<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aptoide.amethyst">

    <uses-sdk tools:overrideLibrary="com.astuetz.pagerslidingtabstrip, com.bumptech.glide.integration.okhttp" />

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <permission
        android:name="${applicationId}.org.onepf.openiab.permission.BILLING"
        android:label="Make internal payments"
        android:protectionLevel="normal" />

    <!-- Define your own permission to protect payment broadcast -->
    <permission
        android:name="${applicationId}.PAYMENT_BROADCAST_PERMISSION"
        android:label="Read payment status"
        android:protectionLevel="signature" />
    <!-- "signature" permission granted automatically by system, without notifying user. -->
    <uses-permission android:name="${applicationId}.PAYMENT_BROADCAST_PERMISSION" />

    <application
        android:allowBackup="true">


        <activity android:name=".ui.MyAccountActivity" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.facebook.LoginActivity" />
        <activity android:name=".FeedBackActivity" />
        <activity
            android:name=".social.WebViewFacebook"
            android:theme="@style/AptoideThemeDefault" />
        <activity
            android:name=".social.WebViewTwitter"
            android:theme="@style/AptoideThemeDefault" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/AptoideThemeDefault" />
        <activity android:name="fortumo.FortumoPaymentActivity" />

        <service android:name=".services.AccountAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <provider
            android:name=".webservices.StubProvider"
            android:authorities="${applicationId}.StubProvider"
            android:exported="true" />

        <service
            android:name=".services.RabbitMqService"
            android:exported="false" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.bumptech.glide.integration.okhttp.OkHttpGlideModule"
            android:value="GlideModule" />
        <meta-data
            android:name="com.aptoide.amethyst.AptoideGlideModule"
            android:value="GlideModule" />

        <activity
            android:name=".BaseMainActivity"
            android:label="@string/title_activity_base_main"></activity>
    </application>

</manifest>
