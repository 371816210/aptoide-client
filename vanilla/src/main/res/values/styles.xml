    <style name="Widget.Aptoide.Button.Header" parent="Widget.AppCompat.Button.Small">
        <item name="android:textColor">?attr/inverseTextColor</item>
    </style>

    <style name="HeaderTextAppView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/inverseTextColor</item>
        <item name="android:textSize">@dimen/appview_title_text_size</item>
    </style>

    <style name="RollBackSectionTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:padding">?sectionListView.sectionTextViewPadding</item>
        <item name="android:textColor">?sectionListView.sectionTextViewTextColor</item>
        <item name="android:textSize">?sectionListView.sectionTextViewTextSize</item>
    </style>

    <style name="TextViewAppLabel">

    </style>

    <style name="RollBackSectionItemStyle">
        <item name="android:padding">?sectionListView.sectionItemPadding</item>
        <item name="android:background">?sectionListView.sectionItemBackground</item>
    </style>


    <style name="MenuDrawer" />
    <style name="MenuDrawer.Widget" />
    <style name="MenuDrawer.Widget.Title">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="WidgetButtonCustom" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">?attr/inverseTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="WidgetButtonCustomAptoide" parent="WidgetButtonCustom">
        <item name="android:background">@drawable/aptoide_btn_default_holo_light</item>
    </style>

    <style name="WidgetButtonCustomGray" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gray_btn_default_holo_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textStyle">normal</item>
    </style>



    <style name="WidgetButtonVisa" parent="WidgetButtonCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableLeft">@drawable/ic_action_credit_card_dark</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/visa_btn_default_holo_light</item>
    </style>

    <style name="WidgetButtonPaypal" parent="WidgetButtonCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableLeft">@drawable/ic_action_paypal_dark</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/paypal_btn_default_holo_light</item>
    </style>

    <style name="WidgetButtonCarrierBillingUnitel" parent="WidgetButtonCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableLeft">@drawable/ic_action_unitel2</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/unitel_btn_default_holo_light</item>
    </style>

    <style name="TimelineCommentsDialog" parent="@style/FinskyLightDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FinskyLightDialogTheme" parent="AptoideThemeDefault">
        <item name="android:windowBackground">@drawable/dialog_full_holo_light</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnchanged|adjustResize</item>

    </style>

    <style name="WizardPageTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?attr/customColor</item>
    </style>

    <style name="WizardPageSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PurchaseDialog" parent="@style/FinskyLightDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
    </style>



</resources>